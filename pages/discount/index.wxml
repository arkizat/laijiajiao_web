<view class="tutor-detail-container">
  <view class="spacing-10"></view>
  <view class="tutor-panel">
    <view class="panel-top">
      <view class="dot-icon"></view><text class="title">课时费用</text>
    </view>
    <view class="panel-body">
      <view class="school-timetable">
        <view class="timetable">
          <view class="table-title">
            <text class="time-name">等级</text>
            <text class="week-name">T1</text>
            <text class="week-name">T2</text>
            <text class="week-name">T3</text>
          </view>
          <view class="table-body">
            <view class="table-item">
              <view class="time">
                <text>课时单价</text>
              </view>
              <view class="week">￥1000</view>
              <view class="week">￥1000</view>
              <view class="week">￥1000</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  

  <view class="spacing-10"></view>
  <view class="tutor-panel">
    <view class="panel-top">
      <view class="dot-icon"></view><text class="title">设置折扣</text>
    </view>
    <view class="panel-body">
      <view class="school-timetable">
        <view class="timetable">
          <view class="table-title">
            <text class="time-name">购买时长</text>
            <text class="week-name">折扣数</text>
          </view>
          <view class="table-body">
            <view class="table-item">
              <view class="time">
                <text>4周</text>
              </view>
              <view class="week">8折</view>
            </view>

             <view class="table-item">
              <view class="week"><input type='tel' />周</view>
              <view class="week"><input type='tel' />折</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>


  <view class="spacing-10"></view>
  <view bindtap="applyTutor" class="addBtn">添加</view>
</view>
