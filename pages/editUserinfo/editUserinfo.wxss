@import "../../css/common.wxss";
page {
  height: 100%;
}
.edit-userinfo-container {
  height: 100%;
}
.panel {
  padding: 0 28rpx;
  background-color: #ffffff;
}
.panel .panel-top {
  display: flex;
  position: relative;
  align-items: center;
  padding: 28rpx 0;
  line-height: 1;
}
.panel .panel-top::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.panel .panel-top .dot {
  width: 12rpx;
  height: 12rpx;
  margin-right: 15rpx;
  background-color: rgba(229, 5, 5, 0.18);
  border-radius: 100%;
  overflow: hidden;
}
.panel .panel-top .title {
  display: block;
  line-height: 1;
  font-size: 32rpx;
  color: #434343;
  font-weight: 500;
}
.panel .panel-body {
  padding: 0 26rpx;
  font-size: 30rpx;
  color: #5f5d62;
}

.res-panel {
  padding: 30rpx 0;
}
.basic-panel {
  padding: 0;
}
.panel-item {
  position: relative;
}
.edit-userinfo-container button {
  margin: 78rpx 70rpx 0;
  border-radius: 100rpx;
  background-color: #e50505;
  color: #fff;
}
.edit-userinfo-container button::after {
  border-radius: 100rpx;
  border: none;
}
.slogan {
  margin-top: 20rpx;
  text-align: center;
  color: #e50505;
}
.item-content {
  position: absolute;
  top: 1rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 10;
}
.item-content .content-item::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.item-content .content-item:last-child::after {
  display: none;
}
.item-label {
  display: flex;
  height: 86rpx;
  align-items: center;
}
.item-label text {
  flex: 1;
}
.item-content {
  width: 100%;
  position: absolute;
  top: 86rpx;
  left: 0;
  background-color: #ffffff;
  box-shadow: 0 5rpx 18rpx 0 rgba(219,219,219,0.75);
  z-index: 2;
}
.item-content .item-content-inner {
  padding: 0 26rpx;
}
.item-content.show {
  display: block;
}
.item-content.hide {
  display: none;
}
.item-content .content-item {
  display: flex;
  position: relative;
  height: 86rpx;
  padding: 0 26rpx;
  align-items: center;
}
.item-content .content-item .item-icon {
  width: 12rpx;
  height: 12rpx;
  margin-right: 18rpx;
  border-radius: 100%;
  overflow: hidden;
  background-color: #cfcfcf;
}
.item-content .content-item .item-icon.selected {
  background-color: #e50505;
}
.item-content .content-item .selected {
  color: #e50505;
}
.item-content .content-item text {
  flex: 1;
}
.item-content .content-item .hook-icon {
  width: 28rpx;
  height: 24rpx;
}
.placeholder {
  color: #999;
}