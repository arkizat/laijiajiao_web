page {
  height: 100%;
}
.achievement {
  padding: 30rpx 28rpx;
  font-size: 30rpx;
  font-weight: 300;
  background-color: #ffffff;
}
.achievement .name {
  position: relative;
  padding: 30rpx 0;
  font-size: 32rpx;
  line-height: 1.4;
}
.achievement .name::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.achievement .desc {
  padding: 30rpx 0;
  line-height: 1.4;
}
.achievement .content .pic {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  background-color: #f2eff6;
  vertical-align: top;
}
