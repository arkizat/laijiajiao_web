            <view class="table-item">
              <view class="time">
                <text>上午</text>
                <text class="time-period">（8:00-12:00）</text>
              </view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox"></view></view>
            </view>
            <view class="table-item">
              <view class="time">
                <text>下午</text>
                <text class="time-period">（12:00-18:00）</text>
              </view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
            </view>
            <view class="table-item">
              <view class="time">
                <text>晚上</text>
                <text class="time-period">（18:00-23:00）</text>
              </view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
              <view class="week"><view class="checkbox checked"></view></view>
            </view>
          </view>
        </view>
        <view class="explanation">
          <image mode="scaleFill" src="../../../images/expl_icon.png"></image>
          <text>每周上课次数:</text><text class="num">一周两次</text>
        </view>
      </view>
    </view>
  </view>
  <view class="spacing-10"></view>
  <view wx:if="{{orderType == 1}}" class="pay-panel">
    <view class="panel-top">
      <view class="dot-icon"></view>
      <text class="title">支付金额</text>
      <text class="cost">￥400.00</text>
      <text class="meta">（包含试讲费）</text>
    </view>
  </view>
