        <text class="label">发布时间</text>
        <text class="text">2018-12-23 12:32:32</text>
      </view>
      <view class="cont-item">
        <text class="label">投递时间</text>
        <text class="text">2018-12-23 12:32:32</text>
      </view>
      <view class="cont-item">
        <text class="label">上课地址</text>
