/* pages/Student/My/My.wxss */

._container{
    background-color: #fff;
    padding-bottom: 70rpx;
}

.myBg{
    width: 100%;
}

.itemWrap{
    display: flex;
    border-bottom: 2rpx solid #f5f5f5;
}

.itemWrap.first{
    border-top: 2rpx solid #f5f5f5;
}

.item{
    flex: 1;
    width: 1%;
    padding-top: 33.3%;
    position: relative;

    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.item +.item{
    border-left: 2rpx solid #f5f5f5;
}

.itemInner{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;

    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
}

.itemIocn{
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 26rpx;
}