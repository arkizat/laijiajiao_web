/* pages/Student/My/My.wxss */

._container{
    background-color: #fff;
    padding-bottom: 70rpx;
    margin-bottom: 20rpx;
}

.myBg{
    width: 100%;
}

.itemWrap{
    display: flex;
    border-bottom: 2rpx solid #f5f5f5;
}

.itemWrap.first{
    margin-top: 234rpx;
    border-top: 2rpx solid #f5f5f5;
}

.item{
    flex: 1;
    width: 1%;
    padding-top: 33.3%;
    position: relative;

    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.item +.item{
    border-left: 2rpx solid #f5f5f5;
}

.itemInner{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;

    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
}

.itemIocn{
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 26rpx;
}

.myInfo {
    width: 100%;
    position: absolute;
    top: 82rpx;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

.avatar {
    width: 168rpx;
    height: 168rpx;
    position: relative;
  }
  
.level {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 15rpx;
    bottom: 15rpx;
    line-height: 30rpx;
    border-radius: 100%;
    background-color: #e50505;
    overflow: hidden;
    color: #ffffff;
    font-size: 20rpx;
    text-align: center;
    font-weight: 300;
  }
  .avatarIcon {
    width: 168rpx;
    height: 168rpx;
    background-color: #fff;
    border-radius: 100%;
    box-shadow: 0 0 0 12rpx rgba(255, 255, 255, 0.35);
    overflow: hidden;
  }

  .linkBtn {
    margin-top: 36rpx;
    color: #333234;
    font-size:38rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
  }


  .stdNameWrap{
      display: flex;
      align-items: center;
      justify-content: center;

      margin-top: 32rpx;


      font-size:38rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
    color:rgba(51,50,52,1);
  }


  .girlIcon{
    width: 25rpx;
    height: 25rpx;
    margin-left: 12rpx;
}


.phone{
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(115,115,115,1);
    margin-top: 22rpx;
}