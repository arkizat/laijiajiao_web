/* pages/Student/ReleaseDemand/ReleaseDemand.wxss */

.container{
    margin: 20rpx;
    background-color: #fff;
    padding: 0rpx 24rpx;
}

.saveBtnWrap{
    margin: 22rpx 20rpx 0rpx 20rpx;
}

.saveBtn{
    display: flex;
    align-items: center;
    justify-content: center;
    
    height:76rpx;
    background:linear-gradient(-90deg,rgba(40,161,236,1),rgba(3,136,217,1));
    border-radius:5rpx;

    font-size:32rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
    color: #fff;
}


.title{
    font-size:26rpx;
    font-family:Microsoft YaHei;
    font-weight:400;
    color:#000;
    padding-top: 30rpx;
}

.label{
    font-size:26rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
    color: #737373;
    margin-right: 10rpx;
}

.item{
    display: flex;
    align-items: center;
    height: 86rpx;
    margin-top: 14rpx;
}

.item +.item{
    border-top: 2rpx solid #F5F5F5;
    margin-top: 0;
}

.inputBox{
    flex: 1;
    height: 100%;
    font-size:26rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
}

.inputTxt{
    font-size:26rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
}

.selectBox{
    flex: 1;
}

.selectBox + .selectBox{
    margin-left: 50rpx;
}

.textArea{
    box-sizing: border-box;
    width: 100%;
    height: 230rpx;
    padding: 20rpx 0;
    font-size:26rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
    border-top: 2rpx solid #F5F5F5;
}

.placeHolder{
    color:#737373;
}

.stdContent{
    display: flex;
    align-items: center;
    padding: 24rpx 0 30rpx 0;

    font-size:26rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.stdName{
    flex: 1;
    width: 1%;
}

.stdChange{
    font-size:24rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(30,154,231,1);
}