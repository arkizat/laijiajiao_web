/* pages/Student/ViewAppointment/ViewAppointment.wxss */

page{
    box-sizing: border-box;
    padding: 20rpx;
}

.container{
    background-color: #fff;
    padding: 0 20rpx;
}

.item{
    display: flex;
    align-items: center;
    padding: 30rpx 0;
}

.item + .item{
    border-top: 2rpx solid #F5F5F5;
}

.title{
    display: flex;
    align-items: center;
    height: 78rpx;
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
    color:rgba(67,67,67,1);
    
    border-bottom: 2rpx solid #F2EFF6;
}

.title::before{
    content: '';
    display: block;
    width:12rpx;
    height:12rpx;
    background:rgba(77,182,245,1);
    border-radius:50%;
    margin-right: 8rpx;
}

.logo{
    position: relative;
    width:110rpx;
    height:110rpx;
    margin-right: 20rpx;
}

.logoIcon{
    width: 100%;
    height: 100%;
    border-radius:50%;
}

.level{
    position: absolute;
    right: 0;
    bottom: 5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28rpx;
    height: 28rpx;
    border-radius:50%;
    background-color: #FA0C0C;
    font-size:20rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color: #fff;
}


.rightBox{
    flex: 1;
    width: 1%;
}

.infoWrap{
    display: flex;
    align-items: center;
}

.nameWrap{
    display: flex;
    align-items: center;
    flex: 1;
}

.name{
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
    color:rgba(67,67,67,1);
}

.genderIcon{
    width: 25rpx;
    margin-left: 12rpx;
}

.desc{
    font-size:24rpx;
font-family:Noto Sans S Chinese;
font-weight:300;
color:rgba(115,115,115,1);
margin-top: 20rpx;
}

.price{
    font-size:24rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.addBtn{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 76rpx;
    border-radius: 6rpx;
    font-size: 30rpx;
    font-family:Noto Sans S Chinese;
    font-weight:400;
    color: #fff;

    margin-top: 20rpx;

    background:linear-gradient(-90deg,rgba(40,161,236,1),rgba(3,136,217,1));
}