.tip {
  display: flex;
  align-items: center;
  line-height: 1;
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  color: #7d7d7e;
  font-weight: 300;
}
.tip .horn_icon {
  width: 29rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.save-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  background-color: #e50505;
  color: #ffffff;
}
.placeholder-view-80 {
  height: 80rpx;
}
.placeholder-view-140 {
  height: 140rpx;
}
.view-fix-iphonex {
  width: 100%;
  bottom: 60rpx !important;
}
.view-fix-iphonex::after {
  display: block;
  content: ' ';
  position: fixed;
  bottom: 0 !important;
  height: 60rpx !important;
  width: 100%;
  background: #fff;
}
/* 面板样式 */
.basic-panel {
  padding: 0 28rpx;
  background-color: #ffffff;
  font-size: 30rpx;
}
.basic-panel .panel-item {
  position: relative;
  display: flex;
  height: 86rpx;
  align-items: center;
}
.basic-panel .panel-item::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.basic-panel .panel-item:last-child:after {
  display: none;
}
.panel-item .label {
  width: 140rpx;
}
.panel-item input {
  line-height: 1;
  flex: 1;
}
.panel-item .cont {
  flex: 1;
  font-weight: 400;
}
.panel-item .gender {
  width: 136rpx;
  overflow: hidden;
  border-radius: 2rpx;
  font-size: 20rpx;
}
.panel-item .gender text {
  display: inline-block;
  width: 68rpx;
  height: 42rpx;
  line-height: 42rpx;
  background-color: #e7e5ea;
  text-align: center;
  color: #333333;
}
.panel-item .gender .active {
  background-color: #e50505;
  color: #ffffff;
}

.sub-my-container {
  font-weight: 300;
}
.sub-my-container .basic-panel .panel-item:last-child:after {
  display: block;
}
.panel-wrapper-1 {
  background-color: #ffffff;
}
.panel-wrapper-1 .panel-content {
  padding: 30rpx 28rpx;
}
.tip-2 {
  line-height: 46rpx;
  font-size: 26rpx;
  color: #696969;
}
.panel-wrapper-1 .upload-pic-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 142rpx;
  margin-bottom: 30rpx;
  background-color: #f2eff6;
  font-size: 30rpx;
  color: #696969;
}
.panel-wrapper-1 .upload-pic-btn .add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.panel-wrapper-2,
.panel-wrapper-3 {
  padding: 0 28rpx;
  background-color: #ffffff;
}
.panel-wrapper-2 .panel-item,
.panel-wrapper-3 .panel-item {
  position: relative;
  padding: 28rpx 0;
  font-size: 30rpx;
  line-height: 1;
}
.panel-wrapper-2 .panel-item::after,
.panel-wrapper-3 .panel-item::after {
  display: block;
  content: "";
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #e5e5e5;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
}
.panel-wrapper-2 .panel-item .title {
  margin-bottom: 28rpx;
  line-height: 1.4;
}
.panel-item .content .pic {
  width: 100%;
  height: 300rpx;
  background-color: #f2eff6;
  vertical-align: top;
}
.btn-bar {
  padding: 30rpx 28rpx;
  background-color: #ffffff;
}
.add-btn {
  display: inline-block;
}
.add-btn .add-btn-icon {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.add-btn .add-btn-name {
  margin-left: 14rpx;
  font-size: 28rpx;
  color: #e50505;
  vertical-align: middle;
}
.panel-wrapper-3 .panel-item input,
.panel-wrapper-3 .panel-item textarea {
  width: 100%;
  font-size: 28rpx;
  font-weight: 100;
}
.panel-wrapper-3 .panel-item textarea {
  height: 200rpx;
}
.panel-wrapper-3 .panel-item:last-child::after {
  display: none;
}
.panel-wrapper-3 .upload-pic-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 142rpx;
  background-color: #f2eff6;
  font-size: 30rpx;
  color: #696969;
}
.panel-wrapper-3 .upload-pic-btn .add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.panel-wrapper-3 .pic {
  padding-bottom: 28rpx;
}
.panel-wrapper-3 .pic image {
  width: 100%;
  height: 100%;
  background-color: #f2eff6;
  vertical-align: top;
}