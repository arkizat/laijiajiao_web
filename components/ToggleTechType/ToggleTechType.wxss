/* components/ToggleTechType/ToggleTechType.wxss */

.panel-item {
    position: relative;
    display: flex;
    height: 86rpx;
    align-items: center;
}

.panel-item .label {
    font-size: 26rpx;
    font-family: Microsoft YaHei;
    font-weight: 300;
    color: rgba(115,115,115,1);

    width: 140rpx;
}
.panel-item input {
    line-height: 1;
    flex: 1;
}

.panel-item .cont {
    flex: 1;
    width: 1%;
    font-size: 26rpx;
    font-family: Microsoft YaHei;
    font-weight: 300;
}

.panel-item .gender {
    width: 136rpx;
    overflow: hidden;
    border-radius: 2rpx;
    font-size: 20rpx;
}
.panel-item .gender text {
    display: inline-block;
    width: 68rpx;
    height: 42rpx;
    line-height: 42rpx;
    background-color: #e7e5ea;
    text-align: center;
    color: #333333;
}
.panel-item .gender .active {
    background-color: #e50505;
    color: #ffffff;
}

.arrow-icon {
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    border-color: #b4b4b6;
    border-style: solid;
    border-width: 2rpx 2rpx 0 0;
}
    
.arrow-icon.arrow-bottom {
    transform: rotate(135deg);    
}


.item-content {
    width: 100%;
    position: absolute;
    top: 86rpx;
    left: 0;
    background-color: #ffffff;
    box-shadow: 0 5rpx 18rpx 0 rgba(219,219,219,0.75);
    z-index: 2;    
}

.item-content.show{
    display: block;
}

.item-content.hide{
    display: none;
}

.item-content-inner {
    padding: 0 26rpx;
}

.content-item {
    display: flex;
    position: relative;
    height: 86rpx;
    padding: 0 26rpx;
    align-items: center;    
}
    
.content-item .item-icon {
    width: 12rpx;
    height: 12rpx;
    margin-right: 18rpx;
    border-radius: 100%;
    overflow: hidden;
    background-color: #cfcfcf;
}

.content-item text {
    flex: 1;
    font-size: 30rpx;
    font-weight: 300;
}


.hook-icon {
    width: 28rpx;
    height: 24rpx;    
}
