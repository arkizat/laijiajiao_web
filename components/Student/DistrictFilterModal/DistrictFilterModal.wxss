/* components/Student/DistrictFilterModal/DistrictFilterModal.wxss */

.container{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    position: absolute;
    z-index: 1;
    left: 0;
    top: 85rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 0 0 30rpx 30rpx;
    background-color: #fff;

    border-top: 2rpx solid #f5f5f5;
}

.itemWrap{
    width: 25%;
}

.item{
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    height:52rpx;
    border:2rpx solid rgba(245, 246, 251, 1);
    border-radius:4rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;

    font-size:24rpx;
    font-family:Microsoft YaHei;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.item.active{
    color: #006FEB;
    border-color: #87B5FF;
}