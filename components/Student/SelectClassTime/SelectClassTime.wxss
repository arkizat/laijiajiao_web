/* components/Student/SelectClassTime/SelectClassTime.wxss */

.container{
    margin: 20rpx;
    background-color: #fff;
    padding: 0rpx 24rpx;
}

.title{
    display: flex;
    align-items: center;
    
    height: 68rpx;
    border-bottom: 2rpx solid #F2EFF6;
}

.title::before{
    content: '';
    display: inline-block;
    width:12rpx;
    height:12rpx;
    background:rgba(77,182,245,1);
    border-radius:50%;
    margin-right: 12rpx;
}

.titleName{
    flex: 1;
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
    color:rgba(67,67,67,1);
}


.subTitle{
    font-size:22rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(108,108,108,1);
}


.table{
    margin-top: 30rpx;
}

.header{
    display: flex;
    align-items: center;
    height:60rpx;
    background:rgba(242,239,246,1);
}

.labelCell{
    text-align: center;
    width: 204rpx;
}

.cell{
    text-align: center;
    flex: 1;
    width: 1%;
}

.headerCell{
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(155,155,155,1);
}

.row{
    display: flex;
    align-items: center;
    height: 106rpx;
}

.row + .row{
    border-top: 2rpx solid #F2EFF6;
}

.tdCell{
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
    height: 100%;

    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(92,92,92,1);
}

.date{
    font-size:24rpx;
}

.checkIcon{
    width: 36rpx;
    height: 36rpx;
}