/* components/Student/Switch/Switch.wxss */

.container{
    flex-shrink: 0;
    flex-grow: 0;
    display: flex;
    align-items: center;
}

.item{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 68rpx;
    height: 43rpx;

    font-size:20rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(51,51,51,1);
}

.item.active{
    color: #fff;
    background:rgba(13,141,221,1);
}

.first{
    border-radius: 2rpx 0 0 2rpx;
}

.last{
    border-radius: 0 2rpx 2rpx 0;
}

