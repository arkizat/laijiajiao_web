/* components/Student/HomeTeacher/HomeTeacher.wxss */

.container{
    display: flex;
    align-items: center;
    padding: 30rpx 0;

    border-top: 2rpx solid #F5F5F5;
}

.container.first{
    border-top: 0;
}

.iconImgWrap{
    position: relative;
    width: 110rpx;
    height: 110rpx;
    margin-right: 25rpx;
}

.iconImg{
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.rankIcon{
    right: 0;
    bottom: 5rpx;
    position: absolute;
    width: 28rpx;
    height: 28rpx;
}

.infoWrap{
    flex: 1;
    width: 1%;
    height: 110rpx;

    font-size:24rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.teacherName{
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
    color:rgba(67,67,67,1);
    margin-right: 16rpx;
}