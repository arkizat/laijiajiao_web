/* components/Student/HomeTeacher/HomeTeacher.wxss */

.container{
    display: flex;
    align-items: center;
    padding: 30rpx 0;

    border-top: 2rpx solid #F5F5F5;
}

.container.first{
    border-top: 0;
}

.iconImgWrap{
    position: relative;
    width: 110rpx;
    height: 110rpx;
    margin-right: 25rpx;
}

.iconImg{
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.infoWrap{
    flex: 1;
    width: 1%;
    height: 110rpx;

    font-size:24rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color:rgba(115,115,115,1);
}

.teacherName{
    font-size:28rpx;
    font-family:Noto Sans S Chinese;
    font-weight:500;
    color:rgba(67,67,67,1);
    margin-right: 16rpx;
}

.level{
    position: absolute;
    right: -10rpx;
    bottom: 5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40rpx;
    height: 40rpx;
    border-radius:50%;
    background-color: #FA0C0C;
    font-size:20rpx;
    font-family:Noto Sans S Chinese;
    font-weight:300;
    color: #fff;
}